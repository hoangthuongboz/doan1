@model Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>
        <label>Category</label>
        <select name="CategoryId">
            @foreach (Category item in ViewBag.categories)
            {
                @if (item.Id == Model.CategoryId)
                {
                    <option value="@item.Id" selected="selected">@item.Name</option>

                }
                else
                {
                    <option value="@item.Id">@item.Name</option>

                }
            }
        </select>
    </p>
    <p>
        <label>Name</label>
        <input type="text" name="name" value="@Model.Name" />
    </p>
    <p>
        <label>Price</label>
        <input type="number" name="price" value="@Model.Price" />
    </p>
    <p>
        <label>Quantity</label>
        <input type="number" name="quantity" value="@Model.Quantity" />
    </p>
    <p>
        <label>Discount</label>
        <input type="text" name="Temp_Discount" value="@Model.Discount" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" />
    </p>
    <p>
        <label>Description</label>
        <textarea name="Description">@Model.Description</textarea>
    </p>
    <p>
        <label>Image</label>
        <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
        <input type="file" name="f" />
    </p>
    <p>
        <button>Save</button>
    </p>
</form>
