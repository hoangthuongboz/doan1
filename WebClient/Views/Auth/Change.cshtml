@model Account
@{
    ViewData["Title"] = "Change";
}

<h1>Change</h1>
<div asp-validation-summary="All"></div>
<form method="post">
    <table>
        @*<tr>
                <td>
                    <input type="hidden" name="Id" value="Id" />
                </td>
            </tr>*@
        <tr>
            <td>Username</td>
            <td>
                <input type="text" name="Username" value="@User.Identity.Name" />
            </td>
        </tr>
        <tr>
            <td>Old Password</td>
            <td>
                <input type="password" name="OldPassword" />
            </td>
        </tr>
        <tr>
            <td>New Password</td>
            <td>
                <input type="password" name="Password" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="hidden" name="Email" value="@User.Identity.Name" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button>Change Password</button>
            </td>
        </tr>
    </table>
</form>

