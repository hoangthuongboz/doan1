@model List<Product>
<div class="row">
    @foreach (Product item in Model)
    {

        <div class="col-3">
            <div class="item">
                <h2>
                    <a href="/home/detail/@item.Id">@item.Name</a>
                </h2>
                <div class="img">
                    <a href="/home/detail/@item.Id">
                        <img src="/upload/@item.ImageUrl" style="width: 200px" />
                    </a>
                </div>
                @if (item.Discount == null || item.Discount == 0)
                {
                    <p>Price: <b>@Html.FormatValue(item.Price, "{0:$#,##}")</b></p>
                }
                else
                {
                    <p>Price: <b>@Html.FormatValue(item.Price, "{0:$#,##}")</b></p>
                    <p>Discount: @(item.Discount * 100)%</p>
                    <p>NewPrice: <b>@Html.FormatValue((item.Price * (1 - item.Discount)), "{0:$#,##}")</b></p>
                }
            </div>
        </div>
    }
</div>